<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzm.medicineapp.mapper.FoodMapper">
        <!-- public Food getFoodById(Integer id);-->
        <select id="getFoodById" resultType="food">
                select * from food_tb where id=#{id}
        </select>
        <!--public List<Food> getFoods();-->
        <select id="getFoods" resultType="food">
                select * from food_tb
        </select>
        <!--public Integer addFood(Food food);-->
        <insert id="addFood">
                insert into food_tb(name,compose,method,funs) values
                (#{name},#{compose},#{method},#{funs})
        </insert>
        <!--public Integer delFood(Integer id);-->
        <delete id="delFood">
                delete from food_tb where id=#{id}
        </delete>
        <!--public Integer updateFood(Food food);-->
        <update id="updateFood">
                update food_tb set name=#{name},compose=#{compose},method=#{method},funs=#{funs} where id=#{id}
        </update>
</mapper>