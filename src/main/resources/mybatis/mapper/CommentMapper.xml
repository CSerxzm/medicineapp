<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzm.medicineapp.mapper.CommentMapper">
        <!--public List<Comment> getComments();-->
        <select id="getComments" resultType="comment">
                select * from comment_tb
        </select>
        <!--public List<Comment> getCommentsByForumId(Integer forum_id);-->
        <select id="getCommentsByForumId" resultType="comment">
                select * from comment_tb where forum_id=#{forum_id}
        </select>
        <!--public Integer addComment(Comment comment);-->
        <insert id="addComment" parameterType="comment" useGeneratedKeys="true" keyProperty="id">
                insert into comment_tb(forum_id,name,edit_time,content) values (#{forum_id},#{name},#{edit_time},#{content})
        </insert>
        <!--public Integer delCommentById(Integer id);-->
        <delete id="delCommentById">
                delete from comment_tb where id=#{id}
        </delete>
</mapper>